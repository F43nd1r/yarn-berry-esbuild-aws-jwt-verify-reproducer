{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./.build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "types": ["node"]
  },
  "include": [
    "./@types/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
